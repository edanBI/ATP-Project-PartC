<BorderPane onKeyPressed="#KeyPressed" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <left>
        <VBox prefHeight="200.0" prefWidth="178.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane prefWidth="184.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="126.0" minWidth="10.0" prefWidth="115.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="78.0" minWidth="10.0" prefWidth="53.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="txtfld_rowsNum" disable="false" text="10" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="txtfld_columnsNum" disable="false" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button fx:id="btn_generateMaze" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="Generate Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                    <Button fx:id="btn_solveMaze" onAction="#solveMaze" prefHeight="25.0" prefWidth="167.0" text="Solve Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                    <Button cancelButton="true" onAction="#solveMaze" prefHeight="25.0" prefWidth="167.0" text="Solve Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                    <Label prefHeight="16.0" prefWidth="114.0" text="Miri's Position:" GridPane.rowIndex="5">
                        <font>
                            <Font name="Arial Bold" size="14.0" />
                        </font></Label>
                    <Label fx:id="lbl_character_pos" prefHeight="21.0" prefWidth="102.0" textAlignment="RIGHT" GridPane.columnSpan="2147483647" GridPane.rowIndex="6" />
                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <Pane BorderPane.alignment="CENTER">
            <children>
                <MazeDisplayer fx:id="mazeDisplayer" height="600.0" imageFileGoal="resources/Images/small_messi_goal.png" imageFileNameCharacter="resources/Images/miri.png" imageFileNameWall="resources/Images/wail_wall.jpg" style="-fx-border: black;" width="600.0">
                    <effect>
                        <SepiaTone />
                    </effect></MazeDisplayer>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Pane>
    </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="New Maze" />
                  <MenuItem mnemonicParsing="false" onAction="#saveMaze" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#loadMaze" text="Load" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Options">
               <items>
                  <Menu mnemonicParsing="false" text="Properties">
                     <items>
                        <Menu mnemonicParsing="false" text="Solver Type">
                          <items>
                              <RadioMenuItem mnemonicParsing="false" text="BFS" />
                              <RadioMenuItem mnemonicParsing="false" text="DFS" />
                              <RadioMenuItem mnemonicParsing="false" text="BestFS" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Maze Type">
                           <items>
                              <RadioMenuItem mnemonicParsing="false" text="SimpleMaze" />
                              <RadioMenuItem mnemonicParsing="false" text="MyMaze" />
                           </items>
                        </Menu>
                     </items>
                  </Menu>
               </items></Menu>
          <Menu mnemonicParsing="false" text="Information">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#About" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#Help" text="Help" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Exit">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
